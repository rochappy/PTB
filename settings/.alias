# system
alias host='sudo vi /etc/hosts'
alias hideallfile='defaults write com.apple.finder AppleShowAllFiles -bool false'
alias showallfile='defaults write com.apple.finder AppleShowAllFiles -bool true'
alias o='open .'
alias md='mkdir'
alias vima='vi ~/.alias'

# Clean DS_Store files
alias clean-ds="find . -name '.DS_Store' -exec rm {} \;"

# Common bash commands.
alias le='/opt/local/share/vim/vim74/macros/less.sh'
alias ll='ls -laFh'
alias cls='clear'
alias ps='ps -ef'

# Disk usage
alias du='du -khs'

# goagent
alias goa='python ~/git/goagent/local/proxy.py'



# work
alias baidu='node ~/git/ys-bnac/app.js'
alias sns='cd ~/project/sns'
alias m='cd ~/project/music'
alias svncim='svn ci -m "commit by rochappy"'
alias up='svn up'
alias svnadd='svn add ./* --force'
alias sync='nodesync -f'
alias gruntc='grunt concurrent'
alias compass_new='rvm use ruby-2.1.2@compass1.0.1 --default'
alias compass_old='rvm use ruby-2.1.2@compass0.12.6 --default'

# dev
alias st='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
