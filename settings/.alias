# System
alias host='sudo vi /etc/hosts'
alias sthost='sudo st /etc/hosts'
alias o='open .'
alias md='mkdir'
alias vima='vi ~/.alias'

# Common bash commands.
alias le='/opt/local/share/vim/vim74/macros/less.sh'
alias ll='ls -laFh'
alias cls='clear'
alias ps='ps -ef'

# Generate a random password
alias rp-password='openssl rand -base64 32'
# Clear DNS cache
alias rp-clean-dnscache='sudo killall -HUP mDNSResponder'

# Disk usage
alias rp-du='du -khs'

# Clean DS_Store files
alias rp-clean-ds="find . -name '.DS_Store' -exec rm {} \;"

# Project
alias svnadd='svn add ./* --force'

# Nginx
alias ng-restart='sudo nginx -s reload'
alias ng-stop='sudo nginx -s stop'

# APP open
alias st='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
alias stree='/Applications/SourceTree.app/Contents/MacOS/SourceTree'
alias mou='/Applications/Mou.app/Contents/MacOS/Mou'
