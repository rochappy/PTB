[color]
    branch = auto
    diff = auto
    status = auto
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[user]
	name = rochappy
	email = rochappy.sun@gmail.com
[core]
	autocrlf = false
    editor = /usr/bin/vim
    quotepath = false
    pager = less -x4
	excludesfile = /Users/roc/.gitignore
[alias]
    aa = add --all
    ai = add -i
    st = status
    s = show
    cl = clone --recursive
    ci = commit
    ca = commit -a -m
    br = branch -a
    co = checkout
    df = diff -U6
    ds = diff --staged
    l = log --graph --all --decorate
    d = difftool
    sh = diff-tree --no-commit-id --name-only -r
    pbae = push bae musician
[push]
	default = simple
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
